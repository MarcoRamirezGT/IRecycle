<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home_fragment">
    <fragment
        android:id="@+id/home_fragment"
        android:name="com.example.irecycle.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment" />
    </fragment>
    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.example.irecycle.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_fragment_to_goals_fragment"
            app:destination="@id/goals_fragment" />
    </fragment>
    <fragment
        android:id="@+id/goals_fragment"
        android:name="com.example.irecycle.GoalsFragment"
        android:label="."
        tools:layout="@layout/fragment_goals" >
        <action
            android:id="@+id/action_goals_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment" />
    </fragment>
</navigation>